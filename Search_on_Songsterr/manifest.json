{
  "manifest_version": 2,
  "name": "Songsterr Search",
  "version": "1.0",
  "description": "Adds a 'Search on Songsterr' option to the context menu for highlighted text.",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/songsterr-16.png",
    "32": "icons/songsterr-32.png"
  }
}